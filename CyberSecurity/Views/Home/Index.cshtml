@using CyberSecurity.SharedCommon.Common
@using Newtonsoft.Json
@using CyberSecurity.Library
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var code = "";
    var msg = "";
    var dbresponse = StaticData.GetSessionMessage();
    if (dbresponse != null)
    {
        code = dbresponse.ErrorCode.ToString();
        msg = dbresponse.Message;
    }
}

<div class="row">
    <div class="col-lg-12 mb-4 order-0">
        <div class="card">
            <div class="d-flex align-items-end row">
                <div class="col-sm-7">
                    <div class="card-body">
                        <h5 class="card-title text-primary">Welcome @StaticData.GetUserFullName()! 🎉</h5>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
    $(document).ready(function () {
        if ("@code" != "" && "@msg" != "") {
            if ("@code" == "1") {
                Swal.fire({
                    title: '@msg',
                    icon: 'error',
                    confirmButtonText: 'Ok'
                });
            }
            else {
                Swal.fire({
                    title: '@msg',
                    icon: 'success',
                    confirmButtonText: 'Ok'
                });
            }
        }
    });
    </script>
}